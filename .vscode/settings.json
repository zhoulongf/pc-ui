{
  "editor.formatOnSave": false,
  // 开启 vscode 文件路径导航
  "breadcrumbs.enabled": true,
  // 每次保存的时候自动格式化
  "eslint.validate": [
    "javascript",
    "vue",
    "html"
  ],
  // 保存时的操作
  "editor.codeActionsOnSave": {
    "source.fixAll": true, // 修复所有
    "source.fixAll.eslint": true, // 修复 eslint
    "source.fixAll.stylelint": true // 修复 stylelint
  }
}